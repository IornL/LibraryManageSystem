<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Manager.Model.BookMapper">
    <select id="getAllBooks" resultType="Book">
        SELECT * FROM book
    </select>

    <select id="selectBookById" parameterType="Integer" resultType="Book">
        SELECT * FROM book WHERE id=#{id}
    </select>

    <insert id="addBook" parameterType="Book">
        INSERT INTO book (title, publisher, pubDate) VALUES (#{title}, #{publisher}, #{pubDate})
    </insert>

    <update id="updateBook" parameterType="Book">
        update book set title=#{title},publisher=#{publisher},borrowedDate=#{borrowedDate},borrower=#{borrower},pubDate=#{pubDate},status=#{status} where id=#{id}
    </update>
    <delete id="deleteBook" parameterType="Book">
        DELETE FROM book WHERE id = #{id}
    </delete>
</mapper>
