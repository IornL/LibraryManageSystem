<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="680.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Manager.MainWindow.BookManageController">
    <children>
        <AnchorPane fx:id="bookManagePane" prefHeight="600.0" prefWidth="680.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <JFXButton layoutX="40.0" layoutY="-24.0" onAction="#handleOpenBookAddDialog" prefHeight="43.0"
                           prefWidth="572.0" text="添加图书">
                    <graphic>
                        <FontAwesomeIcon iconName="PLUS"/>
                    </graphic>
                </JFXButton>
                <JFXTreeTableView fx:id="bookListView" editable="true" onMouseClicked="#handleShowPopup"
                                  prefHeight="600.0" prefWidth="680.0" AnchorPane.bottomAnchor="0.0"
                                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="58.0"/>
                <JFXPopup fx:id="popup">
                    <children>
                        <VBox fx:id="popupContentVBox">
                            <children>
                                <JFXButton onAction="#handleDeleteRow" buttonType="RAISED" prefHeight="20.0"
                                           prefWidth="50.0" style="-fx-background-color: lightpink" text="删除"/>
                            </children>
                        </VBox>
                    </children>
                </JFXPopup>
            </children>
        </AnchorPane>
        <AnchorPane fx:id="bookAddPane" layoutX="10.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity"
                    minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="680.0" visible="false">
            <children>
                <JFXButton layoutX="391.0" layoutY="482.0" onAction="#handleCancelAddBook" prefHeight="74.0"
                           prefWidth="234.0" text="取消"/>
